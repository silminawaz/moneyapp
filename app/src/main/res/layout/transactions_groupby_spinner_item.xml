<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin">



    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/transactions_groupby_image"
            android:layout_span="1"
            android:visibility="visible" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transactions_groupby_icon_text"
            android:textSize="@dimen/ewise_primary_text_size"
            android:gravity="start"
            android:textColor="@color/coloreWiseMainTextWhite"
            android:text="D"
            android:maxLines="1"
            android:background="@drawable/ewise_background_circle_primary"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/ewise_horizontal_margin"
            android:visibility="gone">

            </TextView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transactions_groupby_text"
            android:layout_marginLeft="@dimen/ewise_horizontal_margin"
            android:textSize="@dimen/ewise_primary_text_size"
            android:gravity="start"
            android:textColor="@color/coloreWiseSecondaryTextBlack"
            android:text="DAYS"
            android:maxLines="1"
            android:layout_marginRight="@dimen/ewise_horizontal_margin">

        </TextView>
    </TableRow>

</TableLayout>